{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Company edit</h1>

    <div class="span6 centred form-horizontal ">
        {{ form_start(edit_form) }}
        {{ form_errors(edit_form) }}
        <div class="control-group row">
            {{ form_errors(edit_form.name) }}
            <div class="control-label">{{ form_label(edit_form.name) }}</div>
            <div class="control offset2">{{ form_widget(edit_form.name) }}</div>
        </div>
        <div class="control-group row">
            {{ form_errors(edit_form.registrationNo) }}
            <div class="control-label">{{ form_label(edit_form.registrationNo) }}</div>
            <div class="control offset2">{{ form_widget(edit_form.registrationNo) }}</div>
        </div>
        <div class="control-group row">
            {{ form_errors(edit_form.location) }}
            <div class="control-label">{{ form_label(edit_form.location) }}</div>
            <div class="control offset2">{{ form_widget(edit_form.location) }}</div>
        </div>
        <div class="control-group row">
            {{ form_errors(edit_form.contactNumber) }}
            <div class="control-label">{{ form_label(edit_form.contactNumber) }}</div>
            <div class="control offset2">{{ form_widget(edit_form.contactNumber) }}</div>
        </div>
        <div class="control-group row">
            {{ form_errors(edit_form.organizationType) }}
            <div class="control-label">{{ form_label(edit_form.organizationType) }}</div>
            <div class="control offset2">{{ form_widget(edit_form.organizationType) }}</div>
        </div>
        <div class="control-group row">
            {{ form_errors(edit_form.website) }}
            <div class="control-label">{{ form_label(edit_form.website) }}</div>
            <div class="control offset2">{{ form_widget(edit_form.website) }}</div>
        </div>
        <div>
        {{ form_widget(edit_form.submit, {'attr': {'class': 'btn btn-large offset2 row'}} ) }}
        </div>
        {{ form_end(edit_form) }}
    </div>

<div class="span2">
    <ul class="record_actions nav">
        <li>
        <a href="{{ path('company') }}" class="btn" >
            Back to the list
        </a>
    </li>
    <li>{{ form_start(delete_form) }}{{ form_widget(delete_form.submit, {'attr': {'class': 'btn'}} ) }}</li>
    </ul>
</div>        
{% endblock %}
