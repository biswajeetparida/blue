{% extends '::base.html.twig' %}

{% block body -%}
    <div class="span4">
        <h1>Company</h1>
    
        <table class="record_properties  table table-striped table-bordered table-hover">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ entity.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ entity.name }}</td>
                </tr>
                <tr>
                    <th>Registrationno</th>
                    <td>{{ entity.registrationNo }}</td>
                </tr>
                <tr>
                    <th>Location</th>
                    <td>{{ entity.location }}</td>
                </tr>
                <tr>
                    <th>Contactnumber</th>
                    <td>{{ entity.contactNumber }}</td>
                </tr>
                <tr>
                    <th>Organizationtype</th>
                    <td>{{ entity.organizationType }}</td>
                </tr>
                <tr>
                    <th>Website</th>
                    <td>{{ entity.website }}</td>
                </tr>
                <tr>
                    <th>Createdat</th>
                    <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
                </tr>
                <tr>
                    <th>Updatedat</th>
                    <td>{{ entity.updatedAt|date('Y-m-d H:i:s') }}</td>
                </tr>
                <tr>
                    <th>Createdby</th>
                    <td>{{ entity.createdBy }}</td>
                </tr>
                <tr>
                    <th>Updatedby</th>
                    <td>{{ entity.updatedBy }}</td>
                </tr>
            </tbody>
        </table>
    </div>
    
    <div class="span5">
        <h1>Users</h1>
        <table class="records_list table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>User name</th>
                    <th>Phone number</th>
                    <th>Email</th>
                    <!--<th>Roles</th>-->
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% if users== null %}
                <tr><td colspan="5" style="text-align: center">no user found</td></tr>
            {% else %}
            {% for user in users %}
                <tr>
                    <td><!--<a href="{{ path('candidateprofile_show', { 'id': entity.id }) }}">-->{{ user.id }}<!--</a>--></td>
                    <td>{{ user.username }}</td>
                    <td>{{ user.phone }}</td>
                    <td>{{ user.email }}</td>
                   <!-- <td>{% for role in user.roles %}
                              {{ role }}
                        {% endfor %}
                    </td>-->
                    <td>
                    <ul class="nav">
                        <li>
                            <a href="#"><i class="icon-eye-open"></i>show</a>
                        </li>
                        <!--<li>
                            <a href="{{ path('candidateprofile_edit', { 'id': entity.id }) }}">edit</a>
                        </li>-->
                    </ul>
                    </td>
                </tr>
                
            {% endfor %}
            {% endif %}
            </tbody>
        </table>
    </div>

    <div class="span5">
        <ul class="record_actions nav pull-left">
            <li>
                <a href="{{ path('company') }}"  class="btn">
                    Back to the list
                </a>
            </li>
            <li>
                <a href="{{ path('company_edit', { 'id': entity.id }) }}"  class="btn">
                    Edit
                </a>
            </li>
            <li>{{ form_start(delete_form) }}{{ form_widget(delete_form.submit, {'attr': {'class': 'btn'}} ) }}</li>
        </ul>
    </div>
{% endblock %}
